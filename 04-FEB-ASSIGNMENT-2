/*program to print given string is palindrome or not using string functions*/
#include <stdio.h>
#include <string.h>
void main()
{
    char str[30];
    char str2[30];
    printf("Enter string");
    gets(str);
    strcpy(str2,str);
    strrev(str);
    if(strcmp(str,str2)==0)
    {
        printf("Given string is palindrome");
    }
    else
    {
        printf("Given string is not palindrome");
    }
}
--------------------------------------------------------
/*program to print given string is palindrome or not*/
#include <stdio.h>
#include <string.h>

int main()
{
    char str1[20];
    int i,len;
    int c=0;
    printf("Enter a string:");
    scanf("%s",str1);
    len=strlen(str1);
    for(i=0;i<length;i++)
    {
        if(str[i]!=str[len-i-1])
        {
            c=1;
            break;
        }
    }
     if(c) 
     {
        printf("%s is not a palindrome",str1);
     }    
    else 
    {
        printf("%s is a palindrome",str1);
    }
    return 0;
}
